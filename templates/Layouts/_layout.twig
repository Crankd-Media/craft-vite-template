<!DOCTYPE html>
<html lang="{{ craft.app.language }}">
  <head>
    <meta charset="utf-8" />
    <title>{{ siteName }}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    {{
      craft.vite.script("src/js/app.ts")
    }}
  </head>
  <body class="ltr">
    <!-- Header -->
    <header>
      <nav
        class="border-blue-500 px-14 py-2 border-2 flex items-center justify-between uppercase"
